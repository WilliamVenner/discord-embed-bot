[Unit]
Description=Discord Embed Bot
After=docker.service
Requires=docker.service

[Service]
Restart=always
ExecStart=/bin/bash -c "/usr/bin/docker rm -f discord_embed_bot; /usr/bin/docker run --name discord_embed_bot discord_embed_bot:latest --discord-bot-token-path /etc/discord_embed_bot/discord_bot_token --config-path /etc/discord_embed_bot/config.json"
ExecStop=/usr/bin/docker stop -t 5 discord_embed_bot

[Install]
WantedBy=default.target